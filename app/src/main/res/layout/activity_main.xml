<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADD8E6"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:text="Symulator Lotto. Autor: Igor Nguyen Van"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:background="#006400"
        android:gravity="center"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Twoje typy:"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center">

        <EditText android:id="@+id/num1" android:inputType="number" android:layout_width="50dp" android:layout_height="50dp" android:layout_margin="5dp"/>
        <EditText android:id="@+id/num2" android:inputType="number" android:layout_width="50dp" android:layout_height="50dp" android:layout_margin="5dp"/>
        <EditText android:id="@+id/num3" android:inputType="number" android:layout_width="50dp" android:layout_height="50dp" android:layout_margin="5dp"/>
        <EditText android:id="@+id/num4" android:inputType="number" android:layout_width="50dp" android:layout_height="50dp" android:layout_margin="5dp"/>
        <EditText android:id="@+id/num5" android:inputType="number" android:layout_width="50dp" android:layout_height="50dp" android:layout_margin="5dp"/>
        <EditText android:id="@+id/num6" android:inputType="number" android:layout_width="50dp" android:layout_height="50dp" android:layout_margin="5dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/drawButton"
        android:text="LOSUJ NUMERY"
        android:background="#3CB371"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <TextView
        android:text="Wylosowane liczby:"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/drawnNumbersLayout"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <TextView
        android:id="@+id/matchCount"
        android:text="Liczba trafień: 0"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/drawCount"
        android:text="Liczba losowań: 0"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/resetButton"
        android:text="RESETUJ GRĘ"
        android:background="#3CB371"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
